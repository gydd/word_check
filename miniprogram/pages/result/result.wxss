/* result.wxss */
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 页面头部样式 */
.header {
  margin-bottom: 30rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.loading-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.loading-icon image {
  width: 100%;
  height: 100%;
}

.loading-text {
  font-size: 28rpx;
  color: #666;
}

/* 错误提示样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.error-icon {
  font-size: 80rpx;
  color: #ff4d4f;
  margin-bottom: 20rpx;
}

.error-message {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.retry-button {
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  color: #fff;
  background-color: #1890ff;
  border-radius: 40rpx;
}

/* 检测结果容器 */
.result-container {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 检测摘要 */
.result-summary {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.summary-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.summary-item:last-child {
  border-bottom: none;
}

.summary-label {
  font-size: 28rpx;
  color: #666;
}

.summary-value {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.summary-value.pass {
  color: #52c41a;
}

.summary-value.fail {
  color: #ff4d4f;
}

.summary-value.score {
  font-size: 32rpx;
  color: #ff8c00;
  font-weight: bold;
}

/* 详细结果 */
.result-details {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

/* 作文批改结果样式 */
.summary-content {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  border-left: 4rpx solid #1890ff;
}

.evaluation-content {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  margin-bottom: 30rpx;
  white-space: pre-wrap;
  word-break: break-all;
}

.suggestions-list {
  margin-bottom: 30rpx;
}

.suggestion-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
}

.suggestion-bullet {
  margin-right: 10rpx;
  color: #1890ff;
  font-weight: bold;
}

.suggestion-text {
  flex: 1;
}

/* 传统检测结果样式 */
.no-issues {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 40rpx 0;
  color: #52c41a;
  font-size: 32rpx;
}

.no-issues .iconfont {
  font-size: 80rpx;
  margin-bottom: 20rpx;
}

.issues-list {
  
}

.issue-item {
  padding: 20rpx;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.issue-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.issue-type {
  font-size: 28rpx;
  font-weight: 500;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.issue-type.error {
  background-color: #fff1f0;
  color: #ff4d4f;
}

.issue-type.warning {
  background-color: #fffbe6;
  color: #faad14;
}

.issue-type.suggestion {
  background-color: #e6f7ff;
  color: #1890ff;
}

.issue-location {
  font-size: 24rpx;
  color: #999;
}

.issue-content {
  
}

.issue-text {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.5;
}

.issue-suggestion {
  font-size: 26rpx;
  color: #666;
  background-color: #f9f9f9;
  padding: 16rpx;
  border-radius: 8rpx;
  line-height: 1.5;
}

.suggestion-label {
  font-weight: 500;
  color: #333;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.action-button {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 28rpx;
  border-radius: 44rpx;
}

.share-button {
  background-color: #1890ff;
  color: #fff;
  margin-right: 20rpx;
}

.return-button {
  background-color: #f5f5f5;
  color: #333;
} 