/* upload.wxss */
.container {
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f7fa;
}

/* 页面头部样式 */
.header {
  margin-bottom: 30rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.check-cost {
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: 500;
}

/* 错误信息样式 */
.error-message {
  background-color: #fff2f0;
  border: 1px solid #ffccc7;
  padding: 16rpx 24rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.error-message text {
  color: #ff4d4f;
  font-size: 26rpx;
}

/* 选项卡样式 */
.tabs {
  display: flex;
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 24rpx 0;
  transition: all 0.3s;
  position: relative;
}

.tab.active {
  background-color: #e6f7ff;
  color: #1890ff;
}

.tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 30%;
  right: 30%;
  height: 4rpx;
  background-color: #1890ff;
  border-radius: 2rpx;
}

.tab-icon {
  margin-bottom: 10rpx;
  font-size: 48rpx;
}

.tab-text {
  font-size: 28rpx;
}

/* 内容区域样式 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

/* 文本检测样式 */
.text-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.text-input-area {
  position: relative;
}

.text-input {
  width: 100%;
  min-height: 400rpx;
  padding: 20rpx;
  box-sizing: border-box;
  line-height: 1.5;
  font-size: 28rpx;
  color: #333;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  background-color: #fafafa;
}

.placeholder {
  color: #bbb;
}

.text-counter {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: #999;
}

.text-tips {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: #888;
}

/* 文件检测样式 */
.file-content {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.file-upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.upload-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f7f9fc;
  border: 2rpx dashed #d9e1ec;
  border-radius: 12rpx;
  padding: 60rpx;
  width: 100%;
  box-sizing: border-box;
}

.upload-icon {
  font-size: 80rpx;
  color: #1890ff;
  margin-bottom: 20rpx;
}

.upload-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.upload-description {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.file-info {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
}

.file-icon {
  font-size: 60rpx;
  color: #1890ff;
  margin-right: 24rpx;
}

.file-details {
  flex: 1;
}

.file-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  word-break: break-all;
}

.file-size {
  font-size: 24rpx;
  color: #999;
}

.file-actions {
  display: flex;
}

.file-action {
  font-size: 26rpx;
  color: #1890ff;
  margin-left: 24rpx;
  padding: 4rpx 6rpx;
}

.file-delete {
  color: #ff4d4f;
}

/* 操作区域样式 */
.action-area {
  margin-top: auto;
  padding: 20rpx 0;
}

.submit-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background-color: #1890ff;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-bottom: 20rpx;
}

.submit-button.disabled {
  background-color: #bfbfbf;
  color: #f5f5f5;
}

.action-tips {
  text-align: center;
  font-size: 26rpx;
  color: #999;
}

/* 链接文本样式 */
.link-text {
  color: #1890ff;
  text-decoration: underline;
}

.error-text {
  color: #ff4d4f;
} 