/* pages/profile/profile.wxss */
.profile-container {
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* 用户信息卡片 */
.user-info-section {
  padding: 30rpx 30rpx 40rpx;
}

.user-info-card {
  background: linear-gradient(135deg, #3498db, #5dade2);
  border-radius: 20rpx;
  padding: 40rpx 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 130rpx;
  height: 130rpx;
  border-radius: 65rpx;
  border: 4rpx solid #fff;
}

.user-details {
  flex: 1;
  color: #fff;
}

.nickname {
  font-size: 38rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-id {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 20rpx;
}

.points-info {
  display: flex;
  align-items: center;
}

.points-label {
  font-size: 26rpx;
  margin-right: 10rpx;
}

.points-value {
  font-size: 34rpx;
  font-weight: bold;
  margin-right: 20rpx;
}

.level-info {
  font-size: 24rpx;
  background-color: rgba(255, 255, 255, 0.3);
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.not-login {
  flex: 1;
  color: #fff;
}

.login-tips {
  font-size: 30rpx;
  margin-bottom: 20rpx;
}

.login-btn {
  background-color: #fff;
  color: #3498db;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  padding: 0 40rpx;
  display: inline-block;
  font-weight: bold;
}

/* 菜单部分 */
.menu-section {
  padding: 0 30rpx;
}

.menu-group {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.menu-item {
  display: flex;
  align-items: center;
  height: 100rpx;
  position: relative;
  border-bottom: 1rpx solid #f5f5f5;
}

.menu-item:last-child {
  border-bottom: none;
}

